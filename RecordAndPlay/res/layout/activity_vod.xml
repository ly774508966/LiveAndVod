<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/home_bg">
    
	<!-- android:scaleType表示图片的缩放比例，fixXY参数表示填充Iv,不按比例来 -->
	<!-- <ImageView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:src="@drawable/background3"
    /> -->
    
    <RelativeLayout
        android:id="@+id/vodClassRLy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp" 
        android:background="@drawable/singleline_item_bg"
        >

        <TextView
            android:id="@+id/vodClassLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="点播分类:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vodClassValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/vodClassLbl"
            android:background="@drawable/edittext1"
            android:gravity="left|center"
            android:minHeight="30dp"
            android:paddingLeft="5dp"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/vodClassDropDown"
            android:layout_width="30sp"
            android:layout_height="18sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:background="@drawable/down_arrow" />
    </RelativeLayout>
    
        <RelativeLayout
        android:id="@+id/vodPrgRLy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/singleline_item_bg"
        android:minHeight="30dp" >

        <TextView
            android:id="@+id/vodPrgLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="节目列表:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vodPrgValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/vodPrgLbl"
            android:background="@drawable/edittext1"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:paddingLeft="5dp"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/vodPrgDropDown"
            android:layout_width="30sp"
            android:layout_height="18sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:background="@drawable/down_arrow" />
    </RelativeLayout>
    
    <ListView 
        android:layout_marginTop="10sp"
        android:id="@+id/vodVideoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">        
    </ListView>    
</LinearLayout>
